            "url": {
              "raw": "{{BASE_URL}}/api/categories/1",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "categories",
                "1"
              ]
            },
            "description": "Delete a category (only if no expenses are associated)"
          }
        }
      ]
    },
